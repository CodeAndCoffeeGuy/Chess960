{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "src/server.ts"],
  "references": [
    { "path": "../../packages/db" },
    { "path": "../../packages/proto" },
    { "path": "../../packages/rating" },
    { "path": "../../packages/utils" },
    { "path": "../../packages/redis-client" },
    { "path": "../../packages/stockfish" }
  ]
}