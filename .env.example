# =============================================================================
# BULLET CHESS - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local and fill in the values for local development.
# For production, set these as environment variables in your deployment platform.
# NEVER commit real secrets to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE (REQUIRED)
# -----------------------------------------------------------------------------
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://user:password@localhost:5432/chess960"

# -----------------------------------------------------------------------------
# REDIS (REQUIRED)
# -----------------------------------------------------------------------------
# Redis connection string for session storage and caching
REDIS_URL="redis://localhost:6379"

# -----------------------------------------------------------------------------
# AUTHENTICATION (REQUIRED)
# -----------------------------------------------------------------------------
# JWT secret for signing authentication tokens (min 32 characters recommended)
# Generate with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# NextAuth.js configuration
# URL where your app is hosted (with protocol, no trailing slash)
NEXTAUTH_URL="http://localhost:3000"

# NextAuth secret for signing session tokens
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-key-change-this-in-production"

# -----------------------------------------------------------------------------
# OAUTH PROVIDERS (OPTIONAL - for social login)
# -----------------------------------------------------------------------------
# Google OAuth credentials (get from Google Cloud Console)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# -----------------------------------------------------------------------------
# EMAIL SERVICE (OPTIONAL - for magic link authentication)
# -----------------------------------------------------------------------------
# SMTP server configuration
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="noreply@bullet-chess.com"

# Secret for signing magic link tokens
MAGIC_LINK_SECRET="your-magic-link-secret-key"

# -----------------------------------------------------------------------------
# WEBSOCKET SERVER (REQUIRED)
# -----------------------------------------------------------------------------
# WebSocket server configuration
WS_PORT=8080
WS_HOST="0.0.0.0"

# Health check endpoint port
HEALTH_PORT=8081

# -----------------------------------------------------------------------------
# CLIENT-SIDE CONFIGURATION (REQUIRED)
# -----------------------------------------------------------------------------
# Public WebSocket URL (visible to browser)
# Development: ws://localhost:8080
# Production: wss://your-ws-server.com
NEXT_PUBLIC_WS_URL="ws://localhost:8080"

# Public API URL (visible to browser)
NEXT_PUBLIC_API_URL="http://localhost:3000"

# -----------------------------------------------------------------------------
# ANALYTICS (OPTIONAL)
# -----------------------------------------------------------------------------
# PostHog analytics configuration
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# -----------------------------------------------------------------------------
# MONITORING (OPTIONAL - for production)
# -----------------------------------------------------------------------------
# OpenTelemetry endpoint for distributed tracing
OTEL_ENDPOINT=""

# Prometheus metrics port
PROMETHEUS_PORT=9090

# -----------------------------------------------------------------------------
# RATE LIMITING (OPTIONAL)
# -----------------------------------------------------------------------------
# Maximum WebSocket messages per second per connection
RATE_LIMIT_WS=20

# -----------------------------------------------------------------------------
# STRIPE PAYMENT PROCESSING (OPTIONAL - for donations)
# -----------------------------------------------------------------------------
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Webhook secret from https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET="whsec_..."

# -----------------------------------------------------------------------------
# NODE ENVIRONMENT
# -----------------------------------------------------------------------------
# Set to "production" in production deployments
NODE_ENV="development"